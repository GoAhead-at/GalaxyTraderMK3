<?xml version="1.0" encoding="utf-8"?>
<mdscript name="GT_String_Utils_Loader" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../ORIGINAL_MODS_DO NOT_MODIFY/X4Original/libraries/md.xsd">
  <cues>
    
    <!-- Load String Utils Lua Script -->
    <cue name="LoadStringUtils" instantiate="true">
      <conditions>
        <event_ui_triggered screen="'Lua_Loader'" control="'Ready'" />
      </conditions>
      <actions>
        <raise_lua_event 
          name="'Lua_Loader.Load'" 
          param="'extensions.galaxytradermk3.ui.gt_string_utils'"/>
        <debug_text text="'[GT-StringUtils] Lua load requested'" chance="100"/>
      </actions>
    </cue>
    
    <!-- Confirm Lua Loaded -->
    <cue name="StringUtilsLoaded" instantiate="true">
      <conditions>
        <event_ui_triggered screen="'Lua_Loader'" 
          control="'Loaded extensions.galaxytradermk3.ui.gt_string_utils'" />
      </conditions>
      <actions>
        <debug_text text="'[GT-StringUtils] Lua script loaded successfully'" chance="100"/>
        
        <!-- Initialize the module -->
        <raise_lua_event name="'GT_StringUtils.Init'"/>
      </actions>
    </cue>
    
    <!-- Module ready confirmation -->
    <cue name="StringUtilsReady" instantiate="true">
      <conditions>
        <event_ui_triggered screen="'gt_string_utils'" control="'Initialized'" />
      </conditions>
      <actions>
        <debug_text text="'[GT-StringUtils] Module initialized and ready for use'" chance="100"/>
      </actions>
    </cue>
    
  </cues>
</mdscript>

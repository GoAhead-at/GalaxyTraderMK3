<?xml version="1.0" encoding="utf-8"?>
<diff xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- GT Ship Modifications - Ship Mods (Agility Focus) -->
  <add sel="/equipmentmods/ship">
    <!-- Level 1: -5% mass, +10% radar range (Lowest Quality) -->
    <maxhull ware="mod_ship_gt_level1" quality="1" min="1.0" max="1.0">
      <bonus chance="1.0" max="2">
        <mass min="0.95" max="0.95" weight="1"/>
        <radarrange min="1.10" max="1.10" weight="1"/>
      </bonus>
    </maxhull>
    
    <!-- Level 2: -10% mass, +20% radar range (Rare Quality) -->
    <maxhull ware="mod_ship_gt_level2" quality="2" min="1.0" max="1.0">
      <bonus chance="1.0" max="2">
        <mass min="0.90" max="0.90" weight="1"/>
        <radarrange min="1.20" max="1.20" weight="1"/>
      </bonus>
    </maxhull>
    
    <!-- Level 3: -25% mass, +40% radar range (Highest Quality) -->
    <maxhull ware="mod_ship_gt_level3" quality="3" min="1.0" max="1.0">
      <bonus chance="1.0" max="2">
        <mass min="0.75" max="0.75" weight="1"/>
        <radarrange min="1.40" max="1.40" weight="1"/>
      </bonus>
    </maxhull>
  </add>

  <!-- GT Ship Modifications - Engine Mods (Agility Focus) -->
  <add sel="/equipmentmods/engine">
    <!-- Level 1: +20% rotationthrust, +10% strafethrust (Lowest Quality) -->
    <forwardthrust ware="mod_engine_gt_level1" quality="1" min="1.0" max="1.0">
      <bonus chance="1.0" max="2">
        <rotationthrust min="1.20" max="1.20"/>
        <strafethrust min="1.10" max="1.10"/>
      </bonus>
    </forwardthrust>
    
    <!-- Level 2: +50% rotationthrust, +25% strafethrust (Rare Quality) -->
    <forwardthrust ware="mod_engine_gt_level2" quality="2" min="1.0" max="1.0">
      <bonus chance="1.0" max="2">
        <rotationthrust min="1.50" max="1.50"/>
        <strafethrust min="1.25" max="1.25"/>
      </bonus>
    </forwardthrust>
    
    <!-- Level 3: +120% rotationthrust, +60% strafethrust (Highest Quality) -->
    <forwardthrust ware="mod_engine_gt_level3" quality="3" min="1.0" max="1.0">
      <bonus chance="1.0" max="2">
        <rotationthrust min="2.20" max="2.20"/>
        <strafethrust min="1.60" max="1.60"/>
      </bonus>
    </forwardthrust>
  </add>

  <!-- GT Penalty Modifications - Ship Mods (Skill Limitation Penalties) -->
  <!-- NOTE: Ship mods only affect ship properties (mass, radarrange, etc.), not engine properties -->
  <!-- Separate wares for ship and engine mods (X4 doesn't allow same ware for both types) -->
  <add sel="/equipmentmods/ship">
    <!-- Severe Penalty: +90% mass -->
    <maxhull ware="mod_penalty_ship_severe" quality="1" min="1.0" max="1.0">
      <bonus chance="1.0" max="1">
        <mass min="1.90" max="1.90" weight="1"/>
      </bonus>
    </maxhull>
    
    <!-- Moderate Penalty: +50% mass -->
    <maxhull ware="mod_penalty_ship_moderate" quality="1" min="1.0" max="1.0">
      <bonus chance="1.0" max="1">
        <mass min="1.50" max="1.50" weight="1"/>
      </bonus>
    </maxhull>
    
    <!-- Light Penalty: +20% mass -->
    <maxhull ware="mod_penalty_ship_light" quality="1" min="1.0" max="1.0">
      <bonus chance="1.0" max="1">
        <mass min="1.20" max="1.20" weight="1"/>
      </bonus>
    </maxhull>
  </add>

  <!-- GT Penalty Modifications - Engine Mods (Skill Limitation Penalties) -->
  <!-- NOTE: Cannot use forwardthrust as both main property and bonus property -->
  <!-- Main property affects forwardthrust, bonus properties affect rotationthrust and strafethrust -->
  <!-- Separate wares for ship and engine mods (X4 doesn't allow same ware for both types) -->
  <add sel="/equipmentmods/engine">
    <!-- Severe Penalty: -90% forwardthrust (main), -90% rotationthrust (bonus) -->
    <forwardthrust ware="mod_penalty_engine_severe" quality="1" min="0.10" max="0.10">
      <bonus chance="1.0" max="1">
        <rotationthrust min="0.10" max="0.10"/>
      </bonus>
    </forwardthrust>
    
    <!-- Moderate Penalty: -50% forwardthrust (main), -50% rotationthrust (bonus) -->
    <forwardthrust ware="mod_penalty_engine_moderate" quality="1" min="0.50" max="0.50">
      <bonus chance="1.0" max="1">
        <rotationthrust min="0.50" max="0.50"/>
      </bonus>
    </forwardthrust>
    
    <!-- Light Penalty: -20% forwardthrust (main), -20% rotationthrust (bonus) -->
    <forwardthrust ware="mod_penalty_engine_light" quality="1" min="0.80" max="0.80">
      <bonus chance="1.0" max="1">
        <rotationthrust min="0.80" max="0.80"/>
      </bonus>
    </forwardthrust>
  </add>

</diff>
